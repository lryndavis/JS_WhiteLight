{{#if sortedProducts}}
  {{#each pagedContent as |product|}}
    <div class="col-md-6 product-tile">
      {{#link-to 'product' product.id}}<img src={{product.image}} alt="featured-image"/>{{/link-to}}
      <span class="title">{{#link-to 'product' product.id}}{{product.title}}{{/link-to}}</span>
      <span class="price">{{convert-currency product}}</span>
    </div>
  {{/each}}
  <div class="page-number">
    {{page-numbers content=pagedContent}}
  </div>
  {{else}}
  <h1 class="no-products">Sorry, no products match this description!</h1>
{{/if}}
